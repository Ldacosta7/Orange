<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="164dp"
        android:layout_weight="1"
        android:src="@drawable/ic_launcher_foreground" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:padding="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewInterventionDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date intervention"/>
        <TextView
            android:id="@+id/textViewInterventionDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"/>
        <TextView
            android:id="@+id/textViewInterventionDuree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duree"/>
        <TextView
            android:id="@+id/textViewInterventionPrix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prix"/>
        <TextView
            android:id="@+id/textViewInterventionStatut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Statut"/>
    </LinearLayout>
</LinearLayout>